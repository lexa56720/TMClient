<controls:ModernWindow  xmlns:controls="clr-namespace:TMClient.Controls"
                        x:Class="TMClient.View.ImagePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMClient.View"
        mc:Ignorable="d"    AllowsTransparency="True"
        WindowStyle="None" MinHeight="400" MinWidth="400"
        Title="MainAuthWindow" Height="600" Width="700" HorizontalAlignment="Center"
        VerticalAlignment="Center" >

    <controls:ModernWindow.Background>
        <SolidColorBrush Opacity="0.3" Color="Black"/>
    </controls:ModernWindow.Background>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <local:ImagePicker x:Name="picker" Grid.Row="0" HorizontalAlignment="Left" ImageSource="{Binding Img}"/>

        <StackPanel Background="Red" Grid.Row="1" Orientation="Horizontal">
            <Image Source="{Binding CroppedImage,ElementName=picker,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</controls:ModernWindow>
