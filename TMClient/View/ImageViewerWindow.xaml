<controls:ModernWindow  xmlns:controls="clr-namespace:TMClient.Controls" 
        x:Class="TMClient.View.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMClient.View"
        mc:Ignorable="d" Title="Просмотр изображения" 
        AllowsTransparency="True" SizeToContent="WidthAndHeight"
        WindowStyle="None" MinHeight="400" MinWidth="400"
        MaxHeight="1000"
        WindowStartupLocation="CenterScreen"
        HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize">

    <controls:ModernWindow.Background>
        <SolidColorBrush Opacity="0.3" Color="{StaticResource BackgroundDarkColor}"/>
    </controls:ModernWindow.Background>
    
    <Grid>

        <Image Source="{Binding Image}" Stretch="Uniform" MinHeight="400" MinWidth="400"  />

    </Grid>
</controls:ModernWindow>
