<Page x:Class="TMClient.View.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMClient.View" xmlns:controls="clr-namespace:TMClient.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">
    <Grid>
        <StackPanel Margin="5">
            <Grid>
                <controls:UserAvatar User="{Binding CurrentUser.Info}" Width="256" Height="256"/> 
                <controls:IconButton HorizontalAlignment="Center" Width="256" Height="256" Style="{StaticResource CircleButton}"
                        VerticalAlignment="Center" Foreground="White"  Content="Изменить" Command="{Binding ChangeAvatarCommand}" />
            </Grid>
            <TextBlock Text="{Binding CurrentUser.Info.Name}" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
