<Page x:Class="TMClient.View.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMClient.View" xmlns:controls="clr-namespace:TMClient.Controls"
      mc:Ignorable="d"  Background="{StaticResource BackgroundDarkBrush}"
      d:DesignHeight="450" d:DesignWidth="800" Margin="0,5,0,0"
      Title="Profile">
    <Grid>
        <StackPanel Margin="5">
            <Grid>
                <controls:EntityImage Entity="{Binding CurrentUser.Info}" Width="256" Height="256"/> 
                <controls:IconButton HorizontalAlignment="Center" Width="256" Height="256" Style="{StaticResource CircleButton}"
                        VerticalAlignment="Center" Foreground="{StaticResource ForegroundBrush}"  Text="Изменить" Icon="&#xe70f;" Command="{Binding ChangeAvatarCommand}" />
            </Grid>
            <TextBlock Text="{Binding CurrentUser.Info.Name}" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
