<Page x:Class="TMClient.View.ChatView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TMClient.View" xmlns:controls="clr-namespace:TMClient.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatView">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border CornerRadius="5" Background="{StaticResource BackgroundBrush}" Margin="5,0,5,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label FontSize="20" Content="Чат намба ван"  HorizontalContentAlignment="Center"  />
                <controls:IconButton Icon="&#xEA54;" Margin="5" HorizontalAlignment="Center" />
            </StackPanel>

        </Border>
        <controls:ChatControl Grid.Row="1" ItemsSource="{Binding Messages}" />
    </Grid>
</Page>
