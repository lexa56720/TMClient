<UserControl x:Class="TMClient.Controls.AutoGeneratedImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMClient.Controls"
             mc:Ignorable="d" Name="autoGenerated"
             d:DesignHeight="400" d:DesignWidth="400">
    <Grid>
        <Ellipse Width="{Binding Width,ElementName=autoGenerated}" 
                 Height="{Binding Height,ElementName=autoGenerated}" Fill="{Binding Color,ElementName=autoGenerated}"/>
        <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Margin="1,2,0,-2" >
            
            <TextBlock VerticalAlignment="Center" FontWeight="SemiBold"  HorizontalAlignment="Center" TextAlignment="Center" 
                       Text="{Binding Entity.Name,Converter={StaticResource FirstCharConverter},ElementName=autoGenerated}"/>
        </Viewbox>
    </Grid>
</UserControl>

    
    