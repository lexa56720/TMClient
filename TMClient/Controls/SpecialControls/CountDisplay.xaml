<UserControl x:Class="TMClient.Controls.CountDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMClient.Controls"
             mc:Ignorable="d" IsHitTestVisible="False"
             d:DesignHeight="60" d:DesignWidth="60" Name="userctrl">
    <Grid DataContext="{Binding ElementName=userctrl}">
        <Ellipse HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{Binding Foreground}" Width="{Binding Width}" Height="{Binding Height}" >
            
        </Ellipse>
        <TextBlock Text="{Binding CountText}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{Binding FontSize}"/>
    </Grid>
</UserControl>
