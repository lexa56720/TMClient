<UserControl x:Class="TMClient.Controls.CircleImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TMClient.Controls"
             mc:Ignorable="d" x:Name="circImg"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Ellipse Height="{Binding Height, RelativeSource={RelativeSource AncestorType={x:Type local:CircleImage}}}"
                 Width="{Binding Width, RelativeSource={RelativeSource AncestorType={x:Type local:CircleImage}}}">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding ImageSource, RelativeSource={RelativeSource AncestorType={x:Type local:CircleImage}}}" />
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
